---
import { Image } from 'astro:assets';
import accessImage from '../assets/images/access.png';
import { getTranslationKey, type Language } from '../utils/i18n';

export interface Props {
  translations: any;
  lang: Language;
}

const { translations, lang } = Astro.props;
---

<section id="about" class="py-20 sm:py-24">
    <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
                <Image 
                    src={accessImage} 
                    alt="Componentes del juego OWASP Top 10" 
                    class="rounded-2xl border-2 border-black shadow-lg mx-auto w-full max-w-2xl"
                />
            </div>
            <div class="text-left">
                <h2 class="text-3xl sm:text-4xl font-bold mb-4 section-title text-center md:text-left" set:html={getTranslationKey(translations, 'about.title')}></h2>
                <p class="text-lg mb-4">
                    <strong set:html={getTranslationKey(translations, 'about.subject')}></strong> 
                    <span set:html={getTranslationKey(translations, 'about.game_name')}></span><br>
                    <strong set:html={getTranslationKey(translations, 'about.objective')}></strong>
                    <span set:html={getTranslationKey(translations, 'about.objective_desc')}></span>
                </p>
                <p class="text-lg" set:html={getTranslationKey(translations, 'about.description')}></p>
            </div>
        </div>
    </div>
</section> 